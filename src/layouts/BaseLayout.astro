---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title class="text-black">{pageTitle}</title>
  </head>
  <body
    class="font-inter selection:bg-red-500/70 text-xl"
  >
    <div
      class="w-1/2 mx-auto p-10 bg-white/60 backdrop-blur-xl"
    >
      <Header />
      <h1 class="text-teal-500">{pageTitle}</h1>
      <div class="m-10">
        <div class="p-5 bg-slate-200">
          <slot />
        </div>
      </div>
      <Footer />
    </div>
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
